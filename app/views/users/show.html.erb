<% javascript 'user-profile' %>

	  <!--Profile Starts -->
      <div id="profile-header">
		<% if own_profile?(@user) -%>
		  <%= render :partial => "users/user_nav", :locals => {:selected => "profile" } %>
		<% end -%>
	    <div id="profile-publish-information" class="publication-info">
	      <%= render :partial => "reviewer/publication_info", :locals => {:item => @user.user_profile, :class_name => "user_profile" }   %>
	    </div>
		<% if own_profile?(@user) || @user.user_profile.published? -%>
             <div id="profile-photo"><%= medium_image(@user)%></div>
			<%= link_to "Ask me a question", user_slug_action_path(:slug => @user.slug, :action => "message"), {:id => "profile-ask-question-content", :class => "button"}%>
	      <%= title @user.full_name, :h3 %>
	      <h4><%= @user.role_description %></h4>
	      <% unless @user.subcategories.blank?%><p>Expertise: <span class="business"><%= @user.expertise %></span></p><% end %>
		  <%unless @user.city.blank?%>  <p>Location: <span class="location"><%=@user.city%>, <%unless @user.region.nil?%><%=@user.region.name%><%end%></span></p>
	      <%end%>
	      <% unless @user.member_since.blank?%><p>Member since: <%= @user.member_since.to_s(:short) %></p><% end %>
          <ul>
          	<%unless @user.phone.nil? || @user.phone == "()"%><li class="phone"><span class="hide">phone:</span> <%=@user.phone%></li><%end%>
            <%unless @user.mobile.nil? || @user.mobile == "()"%><li class="fax"><span class="hide">mobile:</span> <%= @user.mobile%></li><%end%>
            <li class="email"><span class="hide">email:</span> <a href="#"><%=link_to_message(@user)%></a></li>
            <%unless @user.website.blank? %><li class="web"><span class="hide">website:</span> <a href="#"><%= link_to @user.website, :controller => "users", :action => "redirect_website",  :slug =>@user.slug%></a></li><%end%>
        </ul>
	    <%= render :partial => "tabs/index" %>
		<% else -%>
		Profile coming soon
		<%  end -%>
     </div>        
<!--Profile Ends -->