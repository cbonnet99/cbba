<%= f.error_messages :header_message => "Please try again", :message => "Your essential information could not be saved" %>
  <ol>
	  <li><span class='mandatoryStar'>*</span>=mandatory field</li>
    <li>
      <%= f.label :first_name, "Your first name:<span class='mandatoryStar'>*</span>" %>
      <%= f.text_field :first_name %>
    </li>
    <li>
      <%= f.label :last_name, "Your surname:<span class='mandatoryStar'>*</span>" %>
      <%= f.text_field :last_name %>
    </li>
    <li>
      <%= f.label :email, "Your email address:<span class='mandatoryStar'>*</span>" %>
      <%= f.text_field :email %>
    </li>
    <% if sign_up -%>
    <li>
      <%= f.label :password, "Password:<span class='mandatoryStar'>*</span>" %>
      <%= f.password_field :password %>
    </li>
    <li>
      <%= f.label :password_confirmation, "Confirm Password:<span class='mandatoryStar'>*</span>" %>
      <%= f.password_field :password_confirmation %>
    </li>
    <%end -%>
	<% if current_user.nil? -%>
    <li>
      <%= f.label :subcategory1_id, 'Your main expertise<span class="mandatoryStar">*</span>:' %><%= f.select :subcategory1_id, @subcategories, {:prompt => "- Please select -", :include_blank => true }  %><br/>
    </li>
	<% end -%>
    <li>
      <%= f.label :country_id, "Your country:<span class='mandatoryStar'>*</span>" %>
      <%= f.select :country_id, @countries_array %>
    </li>
    <li>
      <%= f.label :district_id, "Your area:<span class='mandatoryStar'>*</span>" %>
      <%= f.select :district_id, @districts, {:prompt => "- Please select -"} %>
    </li>
    <% if sign_up -%>
    <li>
      <%= f.label :accept_terms, "I accept BeAmazing #{link_to("Terms &amp; Conditions", terms_url)}:<span class='mandatoryStar'>*</span>" %>
      <%= f.check_box :accept_terms %>
    </li>
	<% end -%>
  </ol>