<%= f.error_messages %>
  <fieldset>
    <legend>Your Details</legend>
    <ol>
      <li>
        <%= f.label :email, "Your email address:<span class='mandatoryStar'>*</span>" %>
        <%= f.text_field :email %>
      </li>
      <% if with_password -%>
      <li>
        <%= f.label :password, "Password:<span class='mandatoryStar'>*</span>" %>
        <%= f.password_field :password %>
      </li>
      <li>
        <%= f.label :password_confirmation, "Confirm Password:<span class='mandatoryStar'>*</span>" %>
        <%= f.password_field :password_confirmation %>
      </li>
      <%end -%>
      <li>
        <%= f.label :district_id, "Your area:<span class='mandatoryStar'>*</span>" %>
        <%= f.select :district_id, @districts, {:prompt => "- Please select -"} %>
      </li>
      <li>
        <%= f.label :first_name, 'Your first name:' %>
        <%= f.text_field :first_name %>
      </li>
      <li>
        <%= f.label :last_name, 'Your surname:' %>
        <%= f.text_field :last_name %>
      </li>
      <li>
        <%= f.label :receive_newsletter, 'Would you like to subscribe to our newsletter?' %>
        <%= f.check_box :receive_newsletter %>
      </li>
      <li>
        <%= f.label :professional, 'Are you a professional?' %>
        <%= f.check_box :professional   %>
      </li>
    </ol>
  </fieldset>
  <fieldset id="fieldset-professional-details"<%unless f.object.free_listing? || f.object.has_role?('full_member')%>style="display: none;"<%end%>>
    <legend>Professional Details</legend>
    <ol>
      <li>
        <div class="left-input"><%= f.radio_button :membership_type, "free_listing" %></div>
        <div class="right-label"><%= f.label :membership_type_free_listing, 'Free listing'%></div>
      </li>
      <li>
        <div class="left-input"><%= f.radio_button :membership_type, "full_member" %></div>
        <div class="right-label"><%= f.label :membership_type_full_membership, 'Full membership' %>(<%= link_to 'Benefits', whyjoin_path %>)</div>
      </li>
      <li>
        <%= f.label :business_name, "Business name" %>
        <%= f.text_field :business_name  %>
      </li>
      <li>
        <%= f.label :address1, 'Address' %>
        <%= f.text_area :address1, :rows => "2"  %>
      </li>
      <li>
        <%= f.label :suburb, 'Suburb' %>
        <%= f.text_field :suburb  %>
      </li>
      <li>
        <%= f.label :city, 'City' %>
        <%= f.text_field :city %>
      </li>
      <li>
        <%= f.label :phone_prefix, 'Phone' %>
        <%= f.select :phone_prefix, ["", "03", "04", "06", "07", "09"] %><%= f.text_field :phone_suffix, :size => 10 %>
      </li>
      <li>
        <%= f.label :mobile_prefix, 'Mobile' %>
        <%= f.select :mobile_prefix, ["", "021", "027", "029"] %><%= f.text_field :mobile_suffix, :size => 10 %>
      </li>
      <li>
        <label>Please enter up to 3 categories you would like to be listed in:</label>
      </li>
      <li>
        <%= f.label :subcategory1, 'Category1:' %><%= f.select :subcategory1_id, @subcategories, {:prompt => "- Please select -", :include_blank => true} %><br/>
      </li>
      <li>
        <%= f.label :subcategory1, 'Category2:' %><%= f.select :subcategory2_id, @subcategories, {:prompt => "- Please select -", :include_blank => true} %><br/>
      </li>
      <li>
        <%= f.label :subcategory1, 'Category3:' %><%= f.select :subcategory3_id, @subcategories, {:prompt => "- Please select -", :include_blank => true} %><br/>
      </li>
    </ol>
  </fieldset>