<%= render :partial => "users/user_nav", :locals => {:selected => "articles" }  %>
<%= title "Your articles"  %>
<p><%= link_to "Write a new article", new_article_url %></p>
<% if @articles.empty? -%>
  No articles
<% else -%>
  <ul class="simple" id="your-articles">
  <% @articles.each do |a| -%>
    <li class="<%=cycle('odd', 'even')%>"<%= render :partial => "articles/article", :locals => {:article => a } %></li>
  <% end -%>
  </ul>
<%end -%>