<%= render :partial => "admin/admin_nav", :locals => {:selected => "payments" }  %>
<%= title "Payments"%>

<table class="admin">
  <tr>
    <th>Type</th>
    <th>Status</th>
    <th>User</th>
    <th>Title</th>
    <th>Amount</th>
    <th>Date</th>
    <th>Action</th>
    <th>Invoice</th>
  </tr>
<% for payment in @payments %>
  <tr class="<%=cycle('odd', 'even')%>">
	<td><% if payment.debit?%>Direct debit<%else%>Credit card<%end%></td>
    <td><span class="<%=payment.status%>"><%=h payment.status.capitalize %></span></td>
    <td><%=h payment.user.name_with_email unless payment.user.nil? %></td>
    <td><%=h payment.title %></td>
    <td><%=h amount_view(payment.amount.to_s) %></td>
    <td><%=h payment.created_at %></td>
    <td><% if payment.pending?%><%=link_to "Mark as paid", :controller => "admin/payments", :action => "mark_as_paid", :id => payment.id %><%else%>None<%end%></td>
    <td><% unless payment.invoice.nil?%><%= link_to payment.invoice.filename, invoice_path(payment.invoice)%><%end%></td>
  </tr>
<% end %>
</table>