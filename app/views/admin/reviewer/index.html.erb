<%= render :partial => "admin/admin_nav", :locals => {:selected => "reviews" }  %>
<%= title 'Stuff to review' %>
<% unless @articles.blank? -%>
<h3>Articles</h3>
  <ul class="simple" id="reviewable-articles">
  <% @articles.each do |a| -%>
    <li class="<%=cycle('odd', 'even')%>"><%= render :partial => "articles/article", :locals => {:article => a, :review => "true"  } %></li>
  <% end -%>
  </ul>
<% end -%>
<% unless @how_tos.blank? -%>
<h3>'How to' articles</h3>
  <ul class="simple" id="reviewable-how-tos">
  <% @how_tos.each do |a| -%>
    <li class="<%=cycle('odd', 'even')%>"><%= render :partial => "how_tos/how_to", :locals => {:how_to => a, :review => "true" } %></li>
  <% end -%>
  </ul>
<% end -%>
<% unless @special_offers.blank? -%>
<h3>Special offers</h3>
  <ul class="simple" id="reviewable-special-offers">
  <% @special_offers.each do |a| -%>
    <li class="<%=cycle('odd', 'even')%>"><%= render :partial => "special_offers/special_offer", :locals => {:special_offer => a, :review => "true" } %></li>
  <% end -%>
  </ul>
<% end -%>
<% unless @gift_vouchers.blank? -%>
<h3>Gift vouchers</h3>
  <ul class="simple" id="reviewable-gift-vouchers">
  <% @gift_vouchers.each do |a| -%>
    <li class="<%=cycle('odd', 'even')%>"><%= render :partial => "gift_vouchers/gift_voucher", :locals => {:gift_voucher => a, :review => "true" } %></li>
  <% end -%>
  </ul>
<% end -%>
<% unless @user_profiles.blank? -%>
<h3>User profiles</h3>
  <ul class="simple" id="reviewable-user-profiles">
  <% @user_profiles.each do |p| -%>
    <li class="<%=cycle('odd', 'even')%>"><%= render :partial => "users/user", :locals => {:user => p.user, :custom_msg => "Review profile for", :review => "true"  } %></li>
  <% end -%>
  </ul>
<% end -%>