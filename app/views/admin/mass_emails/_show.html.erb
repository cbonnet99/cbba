<%= render :partial => "admin/admin_nav", :locals => {:selected => "emails" }  %>
<%= title "Email: #{mass_email.subject}" %>
<% if mass_email.sent_at.nil? -%>
<%= link_to "Edit", edit_mass_email_url(mass_email)%>
 | <%= link_to "Send test email to yourself", send_test_mass_email_url(:id => mass_email.id)%>
<% unless mass_email.test_sent_at.nil? -%>
 | <%= link_to "Select recipients to send mass email", select_email_recipients_mass_email_url(:id => mass_email.id) %>
<% end -%>
<% else -%>
 <%= link_to "Copy", copy_mass_email_url(:id => mass_email.id) %>
<br/>
Sent on <%=mass_email.sent_at%> to:
<%= mass_email.sent_to%>
<% end -%>
<br/>
<%= mass_email.body %>