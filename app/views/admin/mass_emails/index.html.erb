<%= render :partial => "admin/admin_nav", :locals => {:selected => "emails" }  %>
<%= title "Emails" %>
<p><%= link_to "Send public newsletter", new_mass_email_url(:email_type => "Public newsletter" ) %></p>
<p><%= link_to "Send business newsletter", new_mass_email_url(:email_type => "Business newsletter") %></p>
<p><%= link_to "Create new email", new_mass_email_url %></p>
<% if @mass_emails.blank? -%>
  No emails
<%  else -%>
<ul class="simple">
<% @mass_emails.each do |e| -%>
  <li class="<%= cycle('odd', 'even')%>"><%= render :partial => "admin/mass_emails/mass_email", :locals => {:mass_email => e}  %> </li>
<% end -%>
</ul>
<% end -%>