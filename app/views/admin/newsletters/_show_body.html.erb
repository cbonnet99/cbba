<% unless newsletter.custom1_title.blank? || newsletter.custom1_body.blank? -%>
<h3><%= newsletter.custom1_title%></h3>
<%= newsletter.custom1_body%>
<% end -%>
<% unless newsletter.main_article.blank? -%>

<h3>Main article</h3>
<%= newsletter.main_article%>
<% end -%>

<% unless newsletter.special_offers.blank? -%>
<h3>Special offers</h3>
<ul>
<% newsletter.special_offers.each do |offer| -%>
	<li><%= offer.label(special_offers_show_path(offer.author, offer.slug, :index_public => true))%></li>
<% end -%>
</ul>
<% end -%>

<% unless newsletter.competition.blank? -%>
<h3>Competition</h3>
<%= newsletter.competition%>
<% end -%>

<% unless newsletter.bam_news.blank? -%>
<h3>BAM news</h3>
<%= newsletter.bam_news%>
<% end -%>

<% unless newsletter.gift_vouchers.blank? -%>
<h3>Gift vouchers</h3>
<ul>
<% newsletter.gift_vouchers.each do |gv| -%>
	<li><%= gv.label(gift_vouchers_show_path(gv.author, gv.slug, :index_public => true))%></li>
<% end -%>
</ul>
<% end -%>

<% unless newsletter.users.blank? -%>
<h3>In the spotlight</h3>
<ul>
<% newsletter.users.each do |u| -%>
	<li><%= u.label(expanded_user_path(u))%></li>
<% end -%>
</ul>
<% end -%>

<% unless newsletter.articles.blank? -%>
<h3>Past month's articles</h3>
<ul>
<% newsletter.articles.each do |a| -%>
	<li><%= a.label(articles_show_path(a.author.slug, a.slug, :index_public =>true))%></li>
<% end -%>
</ul>
<% end -%>

<% unless newsletter.upcoming_events.blank? -%>
<h3>Upcoming events</h3>
<%= newsletter.upcoming_events%>
<% end -%>

<% unless newsletter.quotation_quiz.blank? -%>
<h3>Quotation quiz</h3>
<%= newsletter.quotation_quiz%>
<% end -%>

<% unless newsletter.custom2_title.blank? || newsletter.custom2_body.blank? -%>
<h3><%= newsletter.custom2_title%></h3>
<%= newsletter.custom2_body%>
<% end -%>
