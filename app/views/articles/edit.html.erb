<h1>Editing article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <fieldset>
    <legend>Article details</legend>
      <%= render :partial => "form", :locals => {:f => f, :subcategories_label => "3 categories this article is listed in:"  }   %>
  </fieldset>
  <div class="buttons">
    <label for=""></label>
    <%= submit_tag 'Update' %>
  </div>
<% end %>
