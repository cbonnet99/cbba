<% if is_author?(@article) -%>
<%= link_to 'Back to your articles', user_articles_path %>
<% end -%>
<h1><%=h @article.title %></h1>
<div class="publication-author">by <%= author_link(@article.author) %></div>
<div class="publication-actions"><%= render :partial => "reviewer/publication_actions", :locals => {:item => @article, :class_name => "article" }   %>
<% if is_author?(@article) -%>
  <%if @article.draft? -%>
      <%= link_to 'Delete', article_path(@article), :method => "delete", :confirm => "Are you sure? This action can not be undone", :class => "button"  %>
  <%end -%>
<%= link_to 'Edit', edit_article_path(@article), :class => "button" %>
<% end -%></div>
<div class="cleaner"></div>
<%= render :partial => "reviewer/publication_info", :locals => {:item => @article} %>
<hr/>
<%= white_list @article.lead %>
<%= white_list @article.body %>