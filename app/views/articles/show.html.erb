<% if is_author?(@article) -%>
<%= link_to 'Back to your articles', user_articles_path %>
<% end -%>
<h1><%=h @article.title %></h1>
<div class="publication-author">by <%= link_to @article.author.name, user_path_with_context(@article.author) %></div>
<div class="publication-info"><%= render :partial => "reviewer/publication_info", :locals => {:item => @article, :class_name => "article" }   %>
<% if is_author?(@article) -%>
  <%if @article.draft? -%>
      <%= link_to 'Delete', article_path(@article), :method => "delete", :confirm => "Are you sure? This action can not be undone", :class => "button"  %>
  <%end -%>
<%= link_to 'Edit', edit_article_path(@article), :class => "button" %>
<% end -%></div>
<div class="cleaner"></div>
<hr/>
<p>
  <%=h @article.body %>
</p>