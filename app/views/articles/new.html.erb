<%= title "Create a new article", :h2  %>
<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <fieldset>
    <legend>Article details</legend>
      <%= render :partial => "form", :locals => {:f => f, :subcategories_label => "Please enter up to 3 categories you would like this article to be listed in:"  }   %>
  </fieldset>
  <div class="buttons">
    <label for=""></label>
    <%= submit_tag 'Create' %>
  </div>
<% end %>

