<h1>New article</h1>

<% form_for(@article) do |f| %>
  <%= f.error_messages %>

  <fieldset>
    <legend>Article details</legend>
    <ol>
  <li>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </li>
  <li>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </li>
    </ol>
  </fieldset>
	<div class="buttons">
          <label for=""></label>
		<%= submit_tag 'Create' %>
	</div>
<% end %>

<%= link_to 'Back', articles_path %>
