<%= render :partial => "users/user_nav", :locals => {:selected => "articles" }  %>
<%= title "Create a new article"  %>
<%= link_to 'Back to your articles', user_articles_path %>
<% form_for(@article) do |f| %>
  <%= f.error_messages :header_message => "Please try again", :message => "Your article could not be saved" %>

      <%= render :partial => "form", :locals => {:f => f, :subcategories_label => "Please enter up to 3 categories you would like this article to be listed in:"  }   %>
  <div class="buttons">
    <label for=""></label>
    <%= submit_tag 'Save &amp; Publish', :name => "save_and_publish"  %>
    <%= submit_tag 'Save As Draft', :name => "save_as_draft"  %>
    <%= submit_tag 'Cancel', :name => "cancel"  %>
  </div>
<% end %>