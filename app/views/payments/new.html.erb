<%= title "Payment for your full membership" %>


<form action="<%= CryptoPaypal::Config.paypal_server %>" method="post">
<input type="hidden" name="cmd" value="_s-xclick" />
  <input type="hidden" name="encrypted" value="<%= paypal_encrypted(@payment) %>" />
  <input type="submit" name="submit" value="Pay for <%=@payment.title%>" alt="Pay for <%=@payment.title%>">
</form>
