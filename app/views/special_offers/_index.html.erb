<% if @all_offers.blank? -%>
  No offers
<%else -%>
  <ul id="your-special-offers" class="simple">
  <% for offer in @all_offers %>
	<% if offer.class.to_s == "SpecialOffer"-%>
    <%= render :partial => "special_offers/special_offer",  :locals => {:special_offer => offer, :hide_state => !@own_profile }   %>
	<%else -%>
    <%= render :partial => "gift_vouchers/gift_voucher",  :locals => {:gift_voucher => offer, :hide_state => !@own_profile }   %>
	<%end -%>
  <% end -%>
  </ul>
<% end -%>

