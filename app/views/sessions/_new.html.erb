<% form_tag session_url(:protocol => APP_CONFIG[:logged_site_protocol]), :class => "fieldset" do %>
		<ol>
			<li>
				<%= label_tag 'email', 'Email' %>
				<%= text_field_tag 'email', @email, :size => 40  %>
			</li>
			<li>
				<%= label_tag 'password' %>
				<%= password_field_tag 'password', nil, :size => 40 %>
			</li>
			<li>
				<%= label_tag 'remember_me', 'Remember me' %>
				<%= check_box_tag 'remember_me', "1", @remember_me %>
			</li>
		</ol>
	<div class="buttons">
          <label for=""></label>
		<%= submit_tag 'Login' %>
	</div>
	<div class="cleaner"></div>
    <div><%= link_to 'Forgot your password?', forgot_password_url %></div>
<% end -%>
<br>