<!-- Intro Starts -->
<div class="intro">
  <h2>Be Amazing is New Zealand's home of health, well-being and development</h2>
  <ul class="category">
    <li>Find <%= link_to "Coaches", :controller => "full_members", :action => "index"%> near you</li>
    <li>Connect with <%= link_to "Resident Experts", :controller => "resident_experts", :action => "index"%></li>
    <li>Search <%= link_to "Articles", :controller => "articles", :action => "index"%></li>
    <li>Find <%= link_to "Courses &amp; Workshops", category_url(:category_slug => "courses")%></li>
  </ul>
<div class="cleaner"></div>
<p class="video"><%= link_to image_tag("welcome_msg.gif"), root_url%></p>
</div>
<!-- Intro Ends -->
<% unless @featured_full_members.empty? -%>
<!--New Full Members Starts -->
<div class="box">
  <h3>Featured Coaches, Speakers &amp; Courses</h3>
  <div id="homepage-full-members">
    <% @featured_full_members.each do |u| -%>
      <div class="homepage-small-user"><%= render :partial => "users/user_small", :locals => {:user => u }  %></div>
    <% end -%>
  </div>
  <% if @total_full_members > $number_full_members_on_homepage -%>
  <p class="floatRight"><%= link_to "View more &raquo;", :controller => "full_members", :action => "index"%></p>
  <% end -%>
</div>
<!--New Full Members Ends -->
<% end -%>
<!--News Starts -->

<div id="articles-homepage" class="section"> 
<h3>Featured Articles</h3>
<div class="rss"><%= link_to image_tag('rss_icon.png'), "http://feeds.feedburner.com/BeAmazing"%></div>
<% @newest_articles.each do |a| -%>
  <div class="homepage-article">
  <% if a.class.to_s == "HowTo" -%>
    <%= render :partial => "how_tos/how_to", :locals => {:how_to => a }  %>
  <% else -%>
    <%= render :partial => "articles/article", :locals => {:article => a }  %>
  <% end -%>
  </div>
<% end -%>
<!--News Ends -->
  <% if @total_articles > $number_articles_on_homepage -%>
    <p><%= link_to "View more articles &raquo;", articles_url %></p>
  <% end -%>
</div>
