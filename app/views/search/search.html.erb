<%  content_for(:head, GMap.header(:host => request.host))%>
<% unless logged_in? || @subcategory.nil? -%>
<div id="bam-invite-join">
  <p>Do you offer <%=@subcategory.name%>? GREAT! We warmly invite you to <%= link_to 'join beamazing.co.nz', signup_intro_path %>!</p>
  <p>If you want to make more use of the Internet, reach more people and make a bigger difference, then you've come to the right place - we help 1000's of people find services like yours... <%= link_to 'LEARN MORE!', signup_intro_path %></p>
</div>
<%end -%>
<% if is_full_member? && !@subcategory.nil? -%>
<p>Are you an expert in <%= @subcategory.name%>? <%= link_to "Apply to become a resident expert", signup_path(:professional => "true", :mt => "resident_expert" )%></p>
<% end -%>
<h1>Search results<%=  describe_search(@region, @district, @category, @subcategory) %></h1>
<% unless @subcategory.nil? || @subcategory.resident_expert_id.nil? %>
  <p id="bam-meet-expert">Meet our resident expert:</p>
  <p><%=render :partial => "users/user", :locals => {:user => @subcategory.resident_expert }  %></p>
<%end -%>
<% if @results.empty? -%>
  No results found <%=  describe_search(@region, @district, @category, @subcategory) %>.
<% else -%>
  <div id="bam-search-results">
    <%= will_paginate @results  %>
<ul class="simple" id="search-results">
  <% @results.each do |r| %>
    <li class="<%= cycle('even', 'odd') %><%if r.user_profile.published?%> user-rollover<%end%>"><%=render :partial => "users/user", :locals => {:user => r }  %></li>
  <% end -%>
</ul>
<%= will_paginate @results, :params => {:where => params[:where], :what => params[:what] , :category_id => params[:category_id]}  %>
  </div>
  <div id="bam-search-map">
    <%= @map.to_html %>
    <%= @map.div(:width => 350, :height => 350) %>
    <% unless @articles.blank? || @subcategory.blank? -%>
      <h3>Articles on <%=@subcategory.name%></h3>
      <% @articles.each do |a| -%>
              <%= render :partial => "articles/article", :locals => {:article => a }   %>
      <% end -%>
    <% end -%>
  </div>
  <div class="cleaner"></div>
<% end -%>
