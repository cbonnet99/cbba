<h3 style='color:#000; font-size:16px;font-weight:bold;'>Latest Articles</h3>
<% @articles.each do |article| -%>
  <h4 style='color:#20ACCD; font-size:18px;font-weight:bold;'><%= link_to article.title, articles_show_url(article.author.slug, article.slug, :protocol => APP_CONFIG[:site_protocol])%></h4>
  <h5 style='color:#000; font-size:12px;font-weight:bold;'>by <%= article.author.name %> [<%= article.author.location%>]</h5>
  <p>Blog Categories: <%= article.blog_subcategories.map(&:name).to_sentence %></p>
  <p><%= article.lead %></p>
  <p><%= link_to "Read more...", articles_show_url(article.author.slug, article.slug, :protocol => APP_CONFIG[:site_protocol])%></p>
<% end -%>
