<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<title><%= @page_title || "#{APP_CONFIG[:site_name]} - New Zealand premier site for health, wellbeing and development"%></title>
<meta name="keywords" content="New Zealand"/>
<meta name="description" content="Looking for well-being professionals in New Zealand? Thousands of NZ well-being companies listed. - Be Amazing - be well. be bold. be you."/>
<meta name="author" content="Be Amazing"/>
<meta name="copyright" content="Be Amazing"/>
<link rel="accessibility" href="/accessibility" title="Accessibility details"/>
<link rel="help" href="help/" title="Help"/>
<link rel="home" href="/" title="Home page"/>
<link rel="Shortcut Icon" type="image/png" href="/images/favicon.png"/>
<%= stylesheet_link_merged :base_michael  %>
<%= yield :tinymce %>
<%= yield :tinymce_init %>
<%= yield :head %>
<link rel="stylesheet" href="/stylesheets/print.css" media="print" type="text/css" />

<!--[if lte IE 5.5]>
		<link rel="stylesheet" type="text/css" href="/stylesheets/ie5.css" media="screen" />
	<![endif]-->
<!--[if lte IE 6]>
		<link rel="stylesheet" type="text/css" href="/stylesheets/ie6.css" media="screen" />
	<![endif]-->
<!--[if lte IE 7]>
		<link rel="stylesheet" type="text/css" href="/stylesheets/ie7.css" media="screen" />
	<![endif]-->
</head>
<body id="home">
<!--Accessibility Info Starts -->
<ul class="aural">
  <li><a href="#content" accesskey="[" title="access key: [">Skip to main content</a></li>
  <li><a href="#search" accesskey="3" title="access key: 3">Skip to search box</a></li>
  <li><a href="#categoryList" accesskey="2" title="access key: 2">Skip to category list</a></li>
</ul>
<!--Accessibility Info Ends -->
<hr class="hide noprint"/>

<!--Container Starts -->
<div id="container"> 
<!--Public Navigation Starts -->
  <ul id="navPublic">
    <li><%= link_to "Home", root_url%></li>
    <li><%= link_to 'About Us', about_path  %></li>
    <li><%= link_to 'Contact Us', contact_path  %></li>
  </ul>
  <!--Public Navigation Ends -->
  <!--Member Navigation Starts -->
  <ul id="navMembers">
    <% if logged_in? -%>
      <li><%=current_user.name_with_email%></li>
      <% if is_admin? -%>
        <li><%= link_to "Admin interface", reviewer_path(:action => "index" ) %></li>
      <% end -%>
		<% if  current_user.region.nil? || current_user.main_expertise_slug.blank?%>
		 <li>No profile</li>
		<%else%>
		 <li><%= link_to "Your profile", current_user.full_member? ? expanded_user_path(current_user) : user_edit_path %></li>
		<%end%>
		<li><%= link_to 'Logout', logout_path %></li>
    <%else -%>
	  <li><%= link_to 'FREE Newsletter', signup_newsletter_path %></li>
      <li><%= link_to 'Login', new_session_path %></li>
	  <li><%= link_to 'Join us', signup_intro_path %></li>
    <% end -%>
  </ul>
  <!--Member Navigation Ends -->
  <div class="cleaner">&nbsp;</div>
  <hr class="hide noprint"/>
  <!--Header Starts -->
  <div id="header">
    <h1><a href="/">Be Amazing â€“ New Zealand premier site for health, wellbeing and development</a></h1>
    <p class="branding">be well. be bold. be you.</p>
  </div>
  <hr class="hide noprint"/>
  <!--Header Ends -->
  <!--Search Bar Starts -->
  <a name="search" href="#search" class="skip-dest"></a>
  <% form_tag search_path(:what => "", :where => "" ), :id => "bam-search-form" do  -%>
    <div id="what-wrapper" class="search-wrapper">
      <label for="what">What, Who: </label>
      <input class="text" type="text" id="what" name="what" value="<%=@what%>" />
      <span>e.g. yoga, julie woods</span>
    </div>
    <div id="where-wrapper" class="search-wrapper">
      <label for="where">Where: </label>
      <input class="text" type="text" id="where" name="where" value="<%=@where%>"  />
      <span>e.g. auckland city, canterbury</span>
    </div>
    <div id="search-submit-wrapper">
      <%= submit_tag "Find", :class => "submit"  %>
    </div>
  <%end%>
  
  <!--Search Bar Ends -->
  <hr class="hide noprint"/>
  <!--Sidebar1 Starts -->
  <div id="sidebar1" class="column">
    <div class="columnTop">&nbsp;</div>
    <a name="categoryList" href="#categoryList" class="skip-dest"></a>
    <ul id="categories">
      <% @categories.each do |c| -%>
        <li<%if c.id == @category_id%> class="selected"<%end%>><a href="<%= category_url(c.slug)%>"><%=c.name%> <span class="users-counter"><%=c.users_counter%></span></a></li>
      <%end -%>
    </ul>
    <ul>
		<% @counters.each do |c| -%>
	      <li<%if c.id == @counter_id%> class="selected"<%end%>><%= link_to "#{c.title} <span class=\"users-counter\">#{c.count}</span>", {:controller => "/#{c.controller_name}", :action => "index", :index_public => true, } %></li>
	    <%  end -%>
    </ul>
	<div id="bam-meet-experts"><h3><%= link_to "Resident experts", :controller => "/resident_experts", :action => "index"  %></h3>
      <div class="nav-expert">
          <a id="prev-expert" class="nav-left" href="#"><span>&lt;Prev</span></a>
		<div id="pics-resident-experts" class="pics">
       	<%= render :partial => "resident_experts/gallery"  %>
		</div>
          <a id="next-expert" class="nav-right" href="#"><span>Next&gt;</span></a>
      </div>
	</div>
	<%= link_to "<span>Add FREE Listing</span>", signup_path(:professional => "true", :mt => "free_listing" ), :class => "addListing button" %>
    <div class="columnBottom">&nbsp;</div>
  </div>
  <!--Sidebar1 Ends -->
  <hr class="hide noprint"/>
  <!--MainContent Starts -->
  <div id="contentMain">
  	<a name="content" href="#content" class="skip-dest"></a>
    <div class="columnTop">&nbsp;</div>
    <div class="column-in">
        <%= flash_messages %>
        <%= yield :layout %>	
    </div>
  </div>
  <!--MainContent Ends -->
  <hr class="hide noprint"/>
  <!--Sidebar2 Starts -->
  <div id="sidebar2" class="column">
    <div class="columnTop">&nbsp;</div>
<% if !logged_in? || (logged_in? && !current_user.receive_newsletter?)-%>
    <%= link_to "<span>FREE Newsletter</span>", signup_newsletter_path, :class => "newsletterBtn button" %>
<% end -%>
    <div id="ad-banners" class="advert">
		<div class="ad-banner"><a href="http://www.elevatecoaching.co.nz"><%= image_tag "banner-ad-sav.gif"%></a></div>
		<div class="ad-banner"><a href="http://www.eurekacoaching.co.nz"><%= image_tag "banner-ad-norma.jpg"%></a></div>
		<div class="ad-banner"><a href="http://www.thatblindwoman.co.nz"><%= image_tag "banner-ad-julie.jpg"%></a></div>
	</div>
	<div id="share">
<script type="text/javascript" src="http://w.sharethis.com/button/sharethis.js#publisher=f32c812b-c46f-468e-b550-cc14a44b191e&amp;type=website&amp;buttonText=ShareThisPage&amp;post_services=facebook%2Cmyspace%2Cdigg%2Cdelicious%2Cybuzz%2Ctwitter%2Cstumbleupon%2Creddit%2Ctechnorati%2Cblogger%2Cwordpress%2Clinkedin%2Ctypepad%2Cgoogle_bmarks%2Cwindows_live%2Cfark%2Cbus_exchange%2Cmixx%2Cpropeller%2Cnewsvine&amp;headerbg=%23cc0000&amp;headerTitle=Share%20this%20page%20with%20others"></script>
	</div>
	<div id="networks">
		<h3>Join us on:</h3>
		<%= link_to image_tag("linked-in.jpg"),  "http://www.linkedin.com/groups?gid=2097679&trk=hb_side_g"%>
		<%= link_to image_tag("twitter.jpg"),  "https://twitter.com/Beamazingltd"%>
		<%= link_to image_tag("facebook.jpg"),  "http://www.facebook.com/group.php?gid=105413506506"%>
	 </div>
  </div>
  <!--Sidebar2 Ends -->
  <hr class="hide noprint"/>
  <!--Footer Starts -->
  <div id="footer">
    <p class="floatLeft">&copy; Be Amazing Ltd</p>
	<p class="floatRight">
	<% if logged_in? -%>
    <%= link_to "Terms &amp; Conditions", terms_path %> | <%= link_to "Disclaimer", disclaimer_path %> | <%end -%>
	design :: <a href="http://www.catchgraphics.com/">catch graphics</a></p>
  </div>
  <!--Footer Starts -->
</div>
<!--Container Ends -->
