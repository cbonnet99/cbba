<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title><%= @page_title || APP_CONFIG[:site_name] %></title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <%= stylesheet_link_tag 'jquery.autocomplete' %>
    <%= stylesheet_link_tag 'default' %>
    <%= stylesheet_link_tag 'base' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "jquery.autocomplete.pack.js" %>
    <script src="/subcategories.js" type="text/javascript"></script>
    <script src="/regions.js" type="text/javascript"></script>
    <script type="text/javascript" src="/javascripts/swfobject.js"></script>
    <script type="text/javascript" src="/javascripts/jsonobj_min.js"></script>
    <script type="text/javascript" src="/javascripts/promowidget.js"></script>
    <%= yield :tinymce %>
    <%= yield :tinymce_init %>
    <%= javascript_include_tag "liquid-canvas.js" %>
    <%= javascript_include_tag "liquid-canvas-plugins.js" %>
    <%= yield :head %>
  </head>
  <body>
    <div id="header">
      <div class="column-in">
        <%= image_tag 'Header-Shoes.jpg' %>
        <div id="login-info">
          <div id="login-left">
            <a href="/">Home</a> |
            <% if logged_in? -%>
              Welcome, <%=current_user.name_with_email%> | <%= link_to "Your profile", current_user.full_member? ? expanded_user_path(current_user) : user_edit_path %> | <%= link_to 'Logout', logout_path %>
            <%else -%>
              <%= link_to 'Login', new_session_path %> | <%= link_to 'Join us', signup_intro_path %> | <%= link_to 'FREE Newsletter', signup_newsletter_path %>
            <% end -%>
          </div>
          <div id="login-right">
            <%= yield :flash %>
            <% if is_admin? -%>
                <span class="important"><%= link_to "Admin interface", expert_applications_action_path(:action => "index" ) %></span>
            <% end -%>
            <% if is_reviewer? -%>
              <%= link_to current_user.sentence_to_review, :controller => "reviewer", :action => "index"    %>
            <% end -%>
          </div>
        </div>
      </div>
    </div>
    <div id="container">

        <div class="column" id="middle"><div class="column-in">
            <div id="search">
              <% form_tag :controller => "/search", :action => "fuzzy_search" do  -%>
                <div id="what-wrapper" class="search-wrapper">
                <label for="fuzzy_what">What: </label>
                <input class="text" type="text" id="fuzzy_what" name="fuzzy_what" value="<%=params[:fuzzy_what]%>" />
                <p>Examples: yoga, acupuncture, life coaching, etc.</p>
                </div>
                <div id="where-wrapper" class="search-wrapper">
                <label for="fuzzy_where">Where: </label>
                <input class="text" type="text" id="fuzzy_where" name="fuzzy_where" value="<%=params[:fuzzy_where]%>"  />
                <p>Examples: wellington, canterbury, auckland, etc.</p>
                </div>
                <div id="search-submit-wrapper" class="search-wrapper">
                  <%= submit_tag "Search", :class => "submit"  %>
                </div>
               <%end%>
            </div>
            <div class="cleaner"></div>
            <div id="mccont">
              <%= flash_messages %>
              <%= yield :layout %>
            </div>

        </div></div>
        
        <div class="column" id="left"><div class="column-in">
            <ul class="simple" id="categories">
              <% @categories.each do |c| -%>
                <li<%if c.id == @category_id%> class="selected"<%end%>><a href="<%= category_url(dasherize(c.name))%>" onClick="U_Core.F_SelectCategory(<%=c.id%>, '<%=c.name%>');"><%=c.name%> <span class="users-counter"><%=c.users_counter%></span></a></li>
              <%end -%>
            </ul>
        </div>
        <div id="promowidget">
          <div class="promowidget">
					<div class="top"></div>
                    <div class="content"></div>
					<div id="promowidget_nav" class="nav" style="display:none"><a href="#" onclick="pw.showPrev(); return false;"><img src="/images/promowidget/icon_prev.gif" alt="Previous" width="20" height="15" border="0" align="absbottom" />prev</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a id="promowidget_pause" href="#" onclick="pw.togglePause(); return false;">pause</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="#" onclick="pw.showNext(); return false;">next<img src="/images/promowidget/icon_next.gif" alt="Next" width="20" height="15" border="0" align="absbottom" /></a></div>
					<div class="bottom"></div>
          </div>
        </div>
      </div>
    <script type="text/javascript" src="/resident_experts/index.js"></script>
    <script type="text/javascript" src="/javascripts/resident_experts_widget.js"></script>

        <div class="column" id="right"><div class="column-in">
        </div></div>


    </div>

    <div id="footer"><div class="column-in">
        <p>&copy;Wellbeing Directory, part of the Elevate Group Ltd</p>
    </div></div>
  </body>
</html>
