<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <title><%= @page_title || APP_CONFIG[:site_name] %></title>
        <meta name="keywords" content="" />
        <meta name="description" content="" />
		<%= stylesheet_link_tag 'default' %>
		<%= stylesheet_link_tag 'base' %>
		<%= javascript_include_tag :defaults %>
        <%= yield :head %>
    </head>
    <body>
<div id="header"><div class="column-in">
          <h1><a href="/">be amazing.co.nz</a></h1>
    <div id="login-info">
    <% if logged_in? -%>
    Welcome, <%= link_to current_user.name, :controller => "users", :action => "profile"%> | <%= link_to 'Logout', logout_path %>
    <%else -%>
        <% unless logged_in? %>
        <%= render :partial => "sessions/small_new" %>
        <%= link_to 'Join us', signup_path %>, it's free!
        <% end %>
    <% end -%></div></div></div>

<div id="main1"><div id="main2">

	<div id="left"><div class="column-in">

		<h4>Left Col</h4>
		<p id="lccont">
			This is content of the LEFT column. It can be <a href="javascript:toggleContent('lccont',1)">short</a>, <a href="javascript:toggleContent('lccont',3)">longer</a> or <a href="javascript:toggleContent('lccont',10)">very long</a>.
		</p>
	</div></div>

	<div id="right"><div class="column-in">
		<h4>Right Col</h4>
        <% unless logged_in? %>
        <p id="rccont"></p>
        <% end %>

	</div></div>

	<div id="middle"><div class="column-in">
		<p id="mccont">
                <%= flash_messages %>
                <%= yield :layout %>
		</p>

	</div></div>

	<div class="cleaner">&nbsp;</div>

</div></div>

<div id="footer"><div class="column-in">
		<h4>The footer</h4>
		<p>
			Anything follows here...
		</p>

</div></div>
</body>
</html>
