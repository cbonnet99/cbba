<% use_tinymce -%>
<% form_for @selected_tab, :url => action_tab_with_id_url(@selected_tab.slug, :action => "update" )  do |f| -%>
  <%= f.error_messages %>
    <ol>
      <li>
        <%= f.label :title, 'Title:' %>
        <%= f.text_field :title, :size => 30 %>
      </li>
      <li>
        <%= f.label :content, 'Content:' %>
        <%= f.text_area :content, :cols => "35" %>
      </li>
    </ol>
  <div class="buttons">
    <label for=""></label>
    <%= submit_tag 'Update' %>
  </div>
<% end -%>