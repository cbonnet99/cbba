<%= title "Edit gift voucher" %>
<%= link_to "Back to your gift vouchers", gift_vouchers_path %>
<% form_for @gift_voucher, :url => {:action => "update"}  do |f| %>
<%= f.error_messages :header_message => "Please try again", :message => "Your gift voucher could not be saved"%>

<%= render :partial => 'form', :locals => {:f => f, :subcategories_label => "Category this gift voucher is listed in:"} %>
<div class="buttons">
  <label for=""></label>
  <%= submit_tag 'Update', :name => "update"  %>
  <%= submit_tag 'Cancel', :name => "cancel"  %>
</div>
<% end %>
